{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "removeComments": true,
    "noImplicitAny": true,
    //"strictNullChecks": true, // TODO enable when are going to rework the code

    "outDir": "./build",
    "sourceMap": true,
    "incremental": true,

    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    ".vscode",
    ".git",
    "build",
    "node_modules"
  ]
}
